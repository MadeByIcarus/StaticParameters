{
  "name": "icarus/static-parameters",
  "type": "library",
  "license": "BSD-3-Clause",
  "description": "Creates a static class Parameters containing common parameters from config file. Also allows to create custom classes with user-defined parameters.",
  "keywords": ["config", "parameters", "static access", "nette"],
  "authors": [
    {
      "name": "Pavel GajdoÅ¡",
      "email": "info@pavelgajdos.cz"
    },
    {
      "name": "Icarus s.r.o",
      "homepage": "http://icarus.cz"
    }
  ],
  "require": {
    "php": ">=7.1.0",
    "nette/bootstrap": "^3.0",
    "nette/di": "^3.0"
  },
  "require-dev": {
    "nette/tester": "^2.2"
  },
  "suggest": {
    "nette/di": "for integration with Nette DI container"
  },
  "autoload": {
    "psr-4": {
      "Icarus\\StaticParameters\\DI\\": "src/DI/",
      "Icarus\\StaticParameters\\": "src/StaticParameters/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "IcarusTests\\": "tests/"
    }
  }
}